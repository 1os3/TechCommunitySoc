# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=forum_db
DB_USER=forum_user
DB_PASSWORD=forum_password

# For development with Docker
# DB_HOST=localhost (when running app outside Docker)
# DB_HOST=postgres (when running app inside Docker network)

# Legacy SQLite config (keep for reference)
# DB_PATH=./database/forum.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@techcommunity.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Recommendation Algorithm
HOT_POSTS_LIMIT=20
RECOMMENDATION_LIMIT=10